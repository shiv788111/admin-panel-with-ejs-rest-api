<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/table.css">
</head>
<body>
<div class="container">
  <h1><%= title %></h1>
  
  <a href="/users/add" class="btn">Add New User</a>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Location</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.location %></td>
          <td>
            <a href="/users/edit/<%= user.id %>">Edit</a>
            <a href="/users/delete/<%= user.id %>" onclick="return confirm('Are you sure?')">Delete</a>
          </td>
        </tr>
      <% }) %>
      
    </tbody>
    
  </table>
    <a href="/" class="btton">Back to Home</a>
</div>
</body>
</html>
